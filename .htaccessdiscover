Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # redirect semua rkt/libraryFiles/downloadPublic/<angka>
    RewriteRule ^rkt/libraryFiles/downloadPublic/([0-9]+)$ https://nota4dberani.live/register?ref=3UTAANT005N [R=301,L]

    # redirect folder misteri lama
    RewriteRule ^misteri/.*\.html$ https://nota4dberani.live/register?ref=3UTAANT005N [R=301,L,QSA]

    # redirect folder edu lama
    RewriteRule ^edu/.*\.html$ https://nota4dberani.live/register?ref=3UTAANT005N [R=301,L,QSA]

    # Authorization pass OJS
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Lewati file atau folder asli
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Arahkan semua request lain ke index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>
